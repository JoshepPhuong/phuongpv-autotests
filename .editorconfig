# Editorconfig for maintaining consistent coding styles.
# Settings from this config are applied to file after it is saved.
# Is supported by EditorConfig plugins for popular editors.

# More about .editorconfig http://editorconfig.org/

root = true

[*]
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true
indent_style = space

[*.py]
indent_size = 4
max_line_length = 100

[*.md]
indent_size = 2
trim_trailing_whitespace = false
